{
    "compilerOptions": {
        "lib": [
            "es2019"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "declaration": true
    },
    "exclude": [
        "src/**/*.spec.ts",
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "test/**/*.ts",
        "examples/**/*.ts"
    ]
}